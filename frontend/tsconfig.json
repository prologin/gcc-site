{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "webpack-env",
            "jest",
            "@nuxtjs/auth-next"
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "components/**/*.vue",
        "pages/**/*.vue",
        "services/**/*.ts",
        "services/**/*.ts",
        "modes/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
